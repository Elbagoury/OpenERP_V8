<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
            		<field name="timing_id"/>
            		<field name="bus_capacity_id"/>
            		<field name="route_id"/>
            	</xpath>
            	<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
            		<attribute name="invisible">1</attribute>
            	</xpath>
            </field>
        </record>
    
		<record id="tgb_timing_tree_view" model="ir.ui.view">
			<field name="name">tgb.timing.tree</field>
			<field name="model">tgb.timing</field>
			<field name="arch" type="xml">
				<tree string="Timing" editable='top'>
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<record id="action_tgb_timing" model="ir.actions.act_window">
            <field name="name">Timing</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tgb.timing</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="tgb_timing_tree_view"/>
		</record>
		
		<record id="tgb_bus_capacity_tree_view" model="ir.ui.view">
			<field name="name">tgb.bus.capacity.tree</field>
			<field name="model">tgb.bus.capacity</field>
			<field name="arch" type="xml">
				<tree string="Bus Capacity" editable='top'>
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<record id="action_tgb_bus_capacity" model="ir.actions.act_window">
            <field name="name">Bus Capacity</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tgb.bus.capacity</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="tgb_bus_capacity_tree_view"/>
		</record>
		
		<record id="tgb_route_tree_view" model="ir.ui.view">
			<field name="name">tgb.route.tree</field>
			<field name="model">tgb.route</field>
			<field name="arch" type="xml">
				<tree string="Route" editable='top'>
					<field name="name"/>
				</tree>
			</field>
		</record>
		
		<record id="action_tgb_route" model="ir.actions.act_window">
            <field name="name">Route</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tgb.route</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="tgb_route_tree_view"/>
		</record>
        
    </data>
</openerp>