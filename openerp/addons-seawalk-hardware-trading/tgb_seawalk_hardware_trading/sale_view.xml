<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//page[@string='Other Information']" position="after">
					<page string="Past Sale History">
						<field name="sale_history_ids" readonly='1' nolabel='1'/>
					</page>
				</xpath>
				<xpath expr="//button[@name='action_button_confirm']" position="replace">
					<button name="bt_confirm" states="draft" string="Confirm Sale" type="object" groups="base.group_user"/>
                    <button name="bt_confirm" states="sent" string="Confirm Sale" class="oe_highlight" type="object" groups="base.group_user"/>
                    <button name="action_button_confirm" states="waiting_manager" string="Confirm" class="oe_highlight" type="object" groups="base.group_sale_manager"/>
                    <button name="action_cancel" states="waiting_manager" string="Cancel Order" type="object" groups="base.group_user"/>
				</xpath>
				<xpath expr="//field[@name='order_line']/tree/field[@name='product_id']" position="attributes">
					<attribute name="required">1</attribute>
				</xpath>
            </field>
        </record>

    </data>
</openerp>
