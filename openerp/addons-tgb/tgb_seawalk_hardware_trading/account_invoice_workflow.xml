<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    
    	<record id="act_inv_waiting_manager" model="workflow.activity">
            <field name="wkf_id" ref="account.wkf"/>
            <field name="name">waiting_manager</field>
            <field name="kind">function</field>
            <field name="action">write({'state':'waiting_manager'})</field>
        </record>
        
        <record id="trans_draft_inv_waiting_manager" model="workflow.transition">
            <field name="act_from" ref="account.act_draft"/>
            <field name="act_to" ref="act_inv_waiting_manager"/>
            <field name="signal">invoice_waiting_manager</field>
        </record>
        
        <record id="trans_act_inv_proforma2_waiting_manager" model="workflow.transition">
            <field name="act_from" ref="account.act_proforma2"/>
            <field name="act_to" ref="act_inv_waiting_manager"/>
            <field name="signal">invoice_waiting_manager</field>
        </record>
		
		<record id="trans_inv_waiting_manager_open" model="workflow.transition">
            <field name="act_from" ref="act_inv_waiting_manager"/>
            <field name="act_to" ref="account.act_open"/>
            <field name="signal">invoice_open</field>
        </record>
        
        <record id="trans_inv_waiting_manager_cancel" model="workflow.transition">
            <field name="act_from" ref="act_inv_waiting_manager"/>
            <field name="act_to" ref="account.act_cancel"/>
            <field name="signal">invoice_cancel</field>
        </record>
        
    </data>
</openerp>
