<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	<record id="view_invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
				<xpath expr="//button[@name='invoice_open']" position="replace">
					<button name="bt_confirm" states="draft" string="Validate" type="object" class="oe_highlight" groups="base.group_user"/>
                    <button name="bt_confirm" states="proforma2" string="Validate" type="object" groups="base.group_user"/>
                    <button name="invoice_open" states="waiting_manager" string="Validate" class="oe_highlight" groups="base.group_sale_manager"/>
                    <button name="invoice_cancel" states="waiting_manager" string="Cancel Invoice" type="object" groups="base.group_user"/>
				</xpath>
				<xpath expr="//field[@name='invoice_line']/tree/field[@name='product_id']" position="attributes">
					<attribute name="required">1</attribute>
				</xpath>
				<xpath expr="//button[@name='invoice_print']" position="replace">
            	</xpath>
            	<xpath expr="//field[@name='invoice_line']/tree/field[@name='invoice_line_tax_id']" position="after">
					<field name="shelf"/>
				</xpath>
				<xpath expr="//field[@name='date_invoice']" position="after">
					<field name="your_ref_no"/>
					<field name="terms"/>
				</xpath>
            </field>
        </record>

    </data>
</openerp>
