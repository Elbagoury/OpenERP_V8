<openerp>
    <data>

        <record id="tgb_rat_trading_daily_price_form_view" model="ir.ui.view">
            <field name="name">Rat Trading Daily Price</field>
            <field name="model">rat.daily.price</field>
            <field name="arch" type="xml">
                <form string="Daily Price" version="7.0" context="{'default_form_id': active_id}">
                    <header>

                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="2"/>
                            <field name="created_by" colspan="2"/>
                            <newline/>
                            <field name="date_import" colspan="2"/>
                            <newline/>
                            <button name="create_product_list"   string="Get Product List" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                            <button name="get_weekly_item"   string="Get Weekly Items" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                            <separator string="Product List" colspan="8"/>
                            <field name = "price_detail_ids"  nolabel="1" colspan="8" context="{'default_form_id': active_id}">
                                <tree editable="1">
                                    <field name="date"/>
                                    <field name="product_id"/>
                                    <field name="price"/>
                                </tree>
                                <form >
                                    <field name="date"/>
                                    <field name="product_id"/>
                                    <field name="price"/>
                                </form>
                            </field>
                            <newline></newline>
                            <button name="confirm_price"   string="Confirm Price" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_rat_trading_daily_price_tree_view">
            <field name="name">Product Daily Price</field>
            <field name="model">rat.daily.price</field>
            <field name="arch" type="xml">
                <tree string="Multiple Quotation" version="7.0">
                    <field name="name"/>
                    <field name="created_by"/>
                    <field name="date_import"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tgb_rat_daily_price_action">
            <field name="name">Product Daily Price</field>
            <field name="view_id" ref="tgb_rat_trading_daily_price_form_view"/>
            <field name="res_model">rat.daily.price</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" ref="tgb_rat_trading_daily_price_tree_view"/>
            <field name="usage">menu</field>
            <field name="target">current</field>
        </record>

        <menuitem id="rat_trading_daily_price_menu" action="tgb_rat_daily_price_action" name="Product Daily Price"
                  parent="base.menu_sales" sequence="11"/>
    </data>
</openerp>
