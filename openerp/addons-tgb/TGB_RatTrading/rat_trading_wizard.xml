<openerp>
    <data>

        <record id="tgb_rat_trading_wizard_form_view" model="ir.ui.view">
            <field name="name">Rat Trading Multiple Quotation</field>
            <field name="model">rat.trading.wizard</field>
            <field name="arch" type="xml">
                <form string="Multiple Quotation" version="7.0" context="{'default_form_id': active_id}" create="false">
                    <header>
                        <button name="save_quotation" string="Save Quotations" class="oe_highlight"
                                groups="base.group_user" type="object" states="draft"/>
                        <button name="confirm_quotation" string="Confirm Quotations" class="oe_highlight"
                                groups="base.group_user" type="object" states="draft"/>
                        <button name="generate_excel" string="Generate Template" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="update_total_amount" string="Update Total" class="oe_highlight"
                                groups="base.group_user" type="object" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"
                               statusbar_colors='{"done":"red","draft":"blue"}'/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="2"/>
                            <field name="created_by" colspan="2"/>
                            <newline/>
                            <field name="date_import" colspan="2"/>
                            <newline/>
                            <button name="create_customer_lines_monday" string="Get Customer (Monday)"
                                    class="oe_highlight"
                                    groups="base.group_user" type="object"/>
                            <button name="create_customer_lines_wednesday" string="Get Customer (Wednesday)"
                                    class="oe_highlight"
                                    groups="base.group_user" type="object"/>
                            <button name="create_customer_lines_friday" string="Get Customer (Friday)"
                                    class="oe_highlight"
                                    groups="base.group_user" type="object"/>
                            <newline></newline>
                        </group>
                        <field name="report_generated" invisible="1"/>
                        <group attrs="{'invisible':[('report_generated','!=',True)]}" col="4">
                            <field name="template_name" invisible="1"/>
                            <field name="template_data" filename="template_name"/>
                            <field name="import_data" colspan="1"/>
                            <button name="import_xls" string="Import" class="oe_highlight"
                                    groups="base.group_user" type="object"/>
                        </group>
                        <separator string="Quick Quotation Creation Detail" colspan="8"/>
                        <field name="trading_detail_ids" editable="1" nolabel="1" colspan="8"
                               context="{'default_form_id': active_id}"/>
                        <newline/>
                        <group>
                            <field name="total_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_rat_trading_wizard_tree_view">
            <field name="name">Multiple Quotation</field>
            <field name="model">rat.trading.wizard</field>
            <field name="arch" type="xml">
                <tree string="Multiple Quotation" version="7.0" create="false">
                    <field name="name"/>
                    <field name="created_by"/>
                    <field name="date_import"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_rat_trading_detail_tree_view">
            <field name="name">Multiple Quotation</field>
            <field name="model">rat.trading.detail</field>
            <field name="arch" type="xml">
                <tree string="Multiple Quotation" editable="top">
                    <field name="customer_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tgb_rat_trading_wizard_action">
            <field name="name">Multiple Quotation</field>
            <field name="view_id" ref="tgb_rat_trading_wizard_form_view"/>
            <field name="res_model">rat.trading.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="rat_trading_multiple_quotation_menu" action="tgb_rat_trading_wizard_action"
                  name="Create Multiple Quotation"
                  parent="base.menu_sales" sequence="10"/>

        <record model="ir.actions.act_window" id="tgb_rat_trading_wizard_detail_action">
            <field name="name">Multiple Quotation Detail</field>
            <field name="view_id" ref="tgb_rat_trading_wizard_tree_view"/>
            <field name="res_model">rat.trading.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="usage">menu</field>
            <field name="target">current</field>
        </record>

        <menuitem id="rat_trading_multiple_quotation_detail_menu" action="tgb_rat_trading_wizard_detail_action"
                  name="Multiple Quotation Detail"
                  parent="base.menu_sales" sequence="10"/>

    </data>
</openerp>
