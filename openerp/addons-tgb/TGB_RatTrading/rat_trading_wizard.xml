<openerp>
    <data>

        <record id="tgb_rat_trading_wizard_form_view" model="ir.ui.view">
            <field name="name">Rat Trading Multiple Quotation</field>
            <field name="model">rat.trading.wizard</field>
            <field name="arch" type="xml">
                <form string="Multiple Quotation" version="7.0" context="{'default_form_id': active_id}">
                    <header>
                        <button name="confirm_quotation"   string="Confirm Quotations" class="oe_highlight"
                                groups="base.group_user" type="object" states="draft"/>
                        <button name="update_total_amount"   string="Update Total" class="oe_highlight"
                                groups="base.group_user" type="object" states="draft"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,done"
                               statusbar_colors='{"done":"red","draft":"blue"}'/>
                    </header>
                    <sheet>
                        <group col="4">
                            <field name="name" colspan="2"/>
                            <field name="created_by" colspan="2"/>
                            <newline/>
                            <field name="date_import" colspan="2"/>
                            <newline/>
                            <button name="create_customer_lines"   string="Get Customer Lines" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                            <separator string="Quick Quotation Creation Detail" colspan="8"/>
                            <field name = "trading_detail_ids" editable="1" nolabel="1" colspan="8" context="{'default_form_id': active_id}"/>
                            <newline></newline>
                            <field name="total_amount"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_rat_trading_wizard_tree_view">
            <field name="name">Multiple Quotation</field>
            <field name="model">rat.trading.wizard</field>
            <field name="arch" type="xml">
                <tree string="Multiple Quotation" version="7.0">
                    <field name="name"/>
                    <field name="created_by"/>
                    <field name="date_import"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="tgb_rat_trading_detail_tree_view">
            <field name="name">Multiple Quotation</field>
            <field name="model">rat.trading.detail</field>
            <field name="arch" type="xml">
                <tree string="Multiple Quotation" editable="top">
                    <field name="customer_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="tgb_rat_trading_wizard_action">
            <field name="name">Multiple Quotation</field>
            <field name="view_id" ref="tgb_rat_trading_wizard_form_view"/>
            <field name="res_model">rat.trading.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="rat_trading_multiple_quotation_menu" action="tgb_rat_trading_wizard_action" name="Create Multiple Quotation"
                  parent="base.menu_sales" sequence="10"/>

        <record model="ir.actions.act_window" id="tgb_rat_trading_wizard_detail_action">
            <field name="name">Multiple Quotation Detail</field>
            <field name="view_id" ref="tgb_rat_trading_wizard_tree_view"/>
            <field name="res_model">rat.trading.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form,tree</field>
            <field name="usage">menu</field>
            <field name="target">current</field>
        </record>



        <menuitem id="rat_trading_multiple_quotation_detail_menu" action="tgb_rat_trading_wizard_detail_action" name="Multiple Quotation Detail"
                  parent="base.menu_sales" sequence="10"/>


    </data>
</openerp>
