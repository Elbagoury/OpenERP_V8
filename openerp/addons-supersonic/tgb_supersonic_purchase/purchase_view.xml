<openerp>
    <data>
        
        <record model="ir.ui.view" id="purchase_order_form_inherit">
            <field name="name">purchase.order.form.inherit</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"></field>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='print_quotation']" position="replace">
            	</xpath>
            	<xpath expr="//button[@name='print_quotation']" position="replace">
            	</xpath>
            	<xpath expr="//field[@name='partner_ref']" position="after">
            		<field name="terms"/>
            	</xpath>
            	<xpath expr="//field[@name='notes']" position="replace">
            	</xpath>
            	<xpath expr="//sheet/group" position="after">
            		<group col='4' colspan='4'>
            			<field name="area_re" nolabel='1' placeholder="RE..." colspan='4'/>
            			<field name="notes" nolabel='1' placeholder="Terms and conditions..." colspan='4'/>
            		</group>
            	</xpath>
            	<xpath expr="//field[@name='picking_type_id']" position="after">
            		<field name="delivery"/>
            		<field name="warranty"/>
            	</xpath>
            </field>
        </record>

    </data>
</openerp>
