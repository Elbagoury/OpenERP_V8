<openerp>
    <data>

        <record id="construction_attendance_import_view" model="ir.ui.view">
            <field name="name">FTB Importer</field>
            <field name="model">ftb.importer</field>
            <field name="arch" type="xml">
                <form string="Import" version="7.0">
                    <header>
                        <button name="submit_request" states="draft" string="Confirm" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="cancel_request" string="Cancel Import"
                                groups="base.group_user" type="object"/>
                        <button name="approve_request"  states="submitted" string="Approve" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="reject_request"  states="submitted" string="Reject"
                                groups="base.group_user" type="object"/>
                        <button name="send_to_costing"  states="approved" string="Send to Project Costing" class="oe_highlight"
                                groups="base.group_user" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected,cancelled"
                               statusbar_colors='{"rejected":"red","approved":"blue"}'/>

                    </header>
                    <sheet>
                        <group>
                            <field name="date_import"/>
                            <field name="file"/>
                            <field name="numero"  widget="test"/>
                            <button name="import_attendance_for_construction" type="object" string="Import Attendance Report" />
                            <newline/>
                            <field name="imported_by"/>
                        </group>
                        <notebook>
                            <page string="Attendance Detail">
                                <field name="attendance_detail_ids">
                                    <tree>
                                        <field name="employee_id"></field>
                                        <field name="time"/>
                                        <field name="action"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Cost Calculating">
                                <field name="costing_detail_ids">
                                    <tree editable="1">
                                        <field name="employee_id"></field>
                                        <field name="contract_id" invisible="1"/>
                                        <field name="hourly_rate"/>
                                        <field name="total_working_hours"/>
                                        <field name="total_cost"/>
                                        <field name="project_id"/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="total_cost"/>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="construction_attendance_import_tree_view">
            <field name="name">FTP Importer Tree</field>
            <field name="model">ftb.importer</field>
            <field name="arch" type="xml">
                <tree string="Importer Recorder" version="7.0" editable="top">
                    <field name="date_import"/>
                    <field name="imported_by"/>
                    <field name="total_cost"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>




        <record model="ir.actions.act_window" id="ftb_importer_action">
            <field name="name">FTB Importer</field>
            <field name="view_id" ref="construction_attendance_import_view"/>
            <field name="res_model">ftb.importer</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="ftb_importer_menu" action="ftb_importer_action" name="Construction Attendance Importer"
                  parent="menu_construction_human_resource_menu" sequence="10"/>


        <record model="ir.actions.act_window" id="ftb_importer_record_action">
            <field name="name">Import record</field>
            <field name="view_id" ref="construction_attendance_import_tree_view"/>
            <field name="res_model">ftb.importer</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="ftb_importer_record_menu" action="ftb_importer_record_action" name="Importer Record"
                  parent="menu_construction_human_resource_menu" sequence="11"/>



    </data>
</openerp>
