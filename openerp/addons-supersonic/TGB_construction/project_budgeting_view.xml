<openerp>
    <data>

        <record id="project_budgeting_tree" model="ir.ui.view">
            <field name="name">Project Budgeting</field>
            <field name="model">project.budgeting</field>
            <field name="arch" type="xml">
                <tree string="Project Costing">
                    <field name="si_voucher_no"/>
                    <field name="project_id"/>
                    <field name="res_user_id"/>
                    <field name="total_budgeting"/>
                </tree>
            </field>
        </record>


        <record id="project_budgeting_form" model="ir.ui.view">
            <field name="name">Project Budgeting Form</field>
            <field name="model">project.budgeting</field>
            <field name="arch" type="xml">
                <form string="Project Budgeting Form" version="7.0">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected,cancelled"
                               statusbar_colors='{"rejected":"red","approved":"blue"}'/>
                    </header>
                    <sheet>
                        <group colspan="8" col="4">
                            <field name="si_voucher_no"/>
                            <field name="res_user_id"/>
                            <field name="project_id" colspan="4" on_change="onchange_project_id(project_id)"/>
                            <field name="total_budgeting"/>
                            <field name="total_profit"/>
                        </group>
                        <notebook>
                            <!-- <page string="Costing Involve">
                                <field name="project_budgeting_detail_ids">
                                    <tree editable="top">
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </page> -->
                            <page string="Material">
                            	<group string="Project Budgeting"/>
                                <field name="stock_issue_ids"/>
                                <group colspan="8" col="4">
                                    <field name="total_material_cost"/>
                                </group>
                                <group string="Project Costing"/>
                                <field name="costing_stock_issue_ids"/>
                                <group colspan="8" col="4">
                                    <field name="costing_total_material_cost"/>
                                </group>
                            </page>
                            <page string="HR">
                            	<group string="Project Budgeting"/>
                                <field name="hr_cost_ids">
                                    <tree>
                                        <field name="employee_id"/>
                                        <field name="importer_id"/>
                                        <field name="amount"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="total_hr_cost"/>
                                </group>
                                <group string="Project Costing"/>
                                <field name="costing_hr_cost_ids">
                                    <tree>
                                        <field name="employee_id"/>
                                        <field name="importer_id"/>
                                        <field name="amount"/>
                                        <field name="note"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="costing_total_hr_cost"/>
                                </group>
                            </page>
                            <page string="Equipment">
                                <group string="Project Budgeting"/>
                                <field name="equipment_ids">
                                    <tree editable="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="total_equipment_cost"/>
                                </group>
                                <group string="Project Costing"/>
                                <field name="costing_equipment_ids">
                                    <tree editable="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="costing_total_equipment_cost"/>
                                </group>
                            </page>
                            <page string="Miscellaneous">
                                <group string="Project Budgeting"/>
                                <field name="others_cost_ids">
                                    <tree editable="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="total_others_cost"/>
                                </group>
                                <group string="Project Costing"/>
                                <field name="costing_others_cost_ids">
                                    <tree editable="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="costing_total_others_cost"/>
                                </group>
                            </page>
                            <page string="Sub-Contractor">
                                <group string="Project Budgeting"/>
                                <field name="sub_contractor_ids">
                                    <tree editable="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="total_sub_contractor"/>
                                </group>
                                <group string="Project Costing"/>
                                <field name="costing_sub_contractor_ids">
                                    <tree editable="1">
                                        <field name="name"/>
                                        <field name="amount"/>
                                        <field name="date"/>
                                    </tree>
                                </field>
                                <group colspan="8" col="4">
                                    <field name="costing_total_sub_contractor"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="project_budgeting_action" model="ir.actions.act_window">
            <field name="name">Project Budgeting</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.budgeting</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem name="Project Budgeting" groups="TGB_construction.group_construction_manager"
                  id="menu_project_budgeting" parent="menu_construction_project_cost_menu"
                  action="project_budgeting_action"/>

    </data>
</openerp>
