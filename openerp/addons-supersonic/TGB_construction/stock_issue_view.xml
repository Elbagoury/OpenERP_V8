<openerp>
    <data>

        <record id="stock_issue_tree" model="ir.ui.view">
            <field name="name">Material Request</field>
            <field name="model">stock.issue</field>
            <field name="arch" type="xml">
                <tree string="Stock Issue">
                    <field name="si_voucher_no"/>
                    <field name="si_date"/>
                    <field name="res_user_id"/>
                    <field name="project_id"/>
                    <field name="total_cost"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="stock_issue_form" model="ir.ui.view">
            <field name="name">Stock Issue Form</field>
            <field name="model">stock.issue</field>
            <field name="arch" type="xml">
                <form string="Stock Issue Form" version="7.0">
                    <header>
                        <button name="submit_request2" states="draft" string="Submit Request" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="cancel_request" string="Cancel Request"
                                groups="base.group_user" type="object"/>
                        <button name="approve_request2"  states="submitted" string="Approve Request" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="reject_request"  states="submitted" string="Reject Request"
                                groups="base.group_user" type="object"/>

                        <button name="create_purchase_order"  states="submitted" string="Create Purchase Order" class="oe_highlight"
                                groups="base.group_user" type="object"/>

                        <button name="create_picking_out" states="approved" string="Create Picking Out"
                                groups="base.group_user" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected,cancelled"
                               statusbar_colors='{"rejected":"red","approved":"blue"}'/>

                    </header>
                    <sheet>
                        <group colspan="8" col="4">
                            <field name="si_voucher_no"/>
                            <field name="issue_type"/>
                            <field name="si_date"/>
                            <field name="stock_location"/>
                            <field name="res_user_id"/>
                            <field name="date_required"/>
                            <field name="site"/>
                    		<field name="office"/>
                            <field name="project_id"/>
                            <field name="wo_no"/>
                            <field name="sale_order_id" on_change="on_change_quotation(sale_order_id)" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Request Detail">
                                <field name="stock_issue_detail_ids"/>
                                <group>
                                    <field name="total_cost" groups="TGB_construction.group_construction_manager"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_stock_issue_search2" model="ir.ui.view">
            <field name="name">stock.issue.search</field>
            <field name="model">stock.issue</field>
            <field name="arch" type="xml">
                <search string="Search Contracts">
                    <field name="si_voucher_no"/>
                    <field name="issue_type"/>
                    <field name="stock_location"/>
                    <field name = "res_user_id"/>
                    <field name = "sale_order_id"/>
                    <field name = "project_id"/>
                    <group expand="0" string="Group By...">
                        <filter string="Project" name="group_by_project_id" context="{'group_by': 'project_id'}"
                                icon="terp-stock_effects-object-colorize"/>
                        <filter string="Status" context="{'group_by': 'state'}"
                                icon="terp-stock_effects-object-colorize"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="stock_issue_action3" model="ir.actions.act_window">
            <field name="name">Material Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.issue</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="stock_issue_tree"/>
            <field name="view_mode">tree,form,calendar,graph</field>
            <field name="context">{'search_default_group_by_project_id': 1}</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                </p>
                <p>

                </p>
            </field>
        </record>





        <menuitem name="Material Request"
                  id="menu_stock_issue2" parent="menu_construction_project_cost_menu"
                  action="stock_issue_action3"/>

        <record id="stock_issue_emp_tree" model="ir.ui.view">
            <field name="name">Stock Issue Employee Tree</field>
            <field name="model">stock.issue.employee</field>
            <field name="arch" type="xml">
                <tree string="Stock Issue" editable="top">
                    <field name="subject_type"/>
                    <field name="sub_code"/>
                    <field name="sub_des"/>
                    <field name="product_id"/>
                    <field name="product_code"/>
                    <field name="qty_on_hand" invisible="1"/>
                    <field name="qty_available"/>
                    <field name="issue_qty"/>
                    <field name="pack_size"/>
                    <field name="no_of_pack"/>
                    <field name="serial_no"/>
                </tree>
            </field>
        </record>


        <record id="stock_issue_detail_tree" model="ir.ui.view">
            <field name="name">Stock Issue detail Tree</field>
            <field name="model">stock.issue.detail</field>
            <field name="arch" type="xml">
                <tree string="Stock Issue" editable="top">
                    <field name="product_id" on_change="onchange_product_id(product_id)"/>
                    <field name="product_code"/>
                    <field name="product_price"/>
                    <field name="qty_on_hand" invisible="1"/>
                    <field name="qty_available"/>
                    <field name="product_uom_id"/>
                    <field name="supplier_id" domain="[('supplier','=',True)]"/>
                    <field name="po_no"/>
                    <field name="location"/>
                    <field name="issue_qty" on_change="on_change_issue_qty(product_id,issue_qty)"/>
                    <field name="total_cost" groups="TGB_construction.group_construction_manager"/>
                    <field name="remark"/>
                </tree>
            </field>
        </record>


        <record id="stock_issue_emp_form" model="ir.ui.view">
            <field name="name">Stock Issue Employee form</field>
            <field name="model">stock.issue.employee</field>
            <field name="arch" type="xml">
                <form string="Stock Issue">
                    <field name="subject_type"/>
                    <field name="sub_code"/>
                    <field name="sub_des"/>
                    <field name="product_id"/>
                    <field name="product_code"/>
                    <field name="qty_on_hand" invisible="1"/>
                    <field name="qty_available"/>
                    <field name="issue_qty"/>
                    <field name="pack_size"/><field name="no_of_pack"/>
                    <field name="serial_no"/>
                </form>
            </field>
        </record>


        <record id="tgb_action_picking_tree" model="ir.actions.act_window">
            <field name="name">Transfers</field>
            <field name="res_model">stock.picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="domain"></field>
            <field name="context">{
                'contact_display': 'partner_address',
                }
            </field>
            <field name="search_view_id" ref="stock.view_picking_internal_search"/>
        </record>


        <menuitem name="Stock Transfer"
                  id="tgb_stock_picking" parent="menu_construction_project_cost_menu"
                  action="tgb_action_picking_tree"/>


    </data>
</openerp>
