<?xml version="1.0"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="saicoms_pos_package_form_view">
            <field name="name">pos.package.form</field>
            <field name="model">pos.package</field>
            <field name="arch" type="xml">
                <form string="Pos Package" version="7.0">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="product_id"/>
                            <field name="reference"/>
                            <field name="used"/>
                            <field name="remain"/>
                            <separator string="Service Redemption" colspan="8"/>
                            <field name="package_redeem_ids" nolabel="1" colspan="4">
                                <tree string="Pos Package" version="7.0" editable="top">
                                    <field name="date"/>
                                    <field name="qty"/>
                                    <field name="perform_user_ids" widget="many2many_tags"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="saicoms_pos_package_tree_view">
            <field name="name">pos.package.tree</field>
            <field name="model">pos.package</field>
            <field name="arch" type="xml">
                <tree string="Pos Package" version="7.0">
                    <field name="name" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="reference"/>
                    <field name="used"/>
                    <field name="remain"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="saicoms_pos_package_redeem_tree_view">
            <field name="name">pos.package.redeem.tree</field>
            <field name="model">pos.package.redeem</field>
            <field name="arch" type="xml">
                <tree string="Pos Package" version="7.0">
                     <field name = "package_id" invisible="1"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="unit_price"/>
                    <field name="reference"/>
                    <field name="date"/>
                    <field name="qty"/>
                    <field name="perform_user_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>


        <record model="ir.ui.view" id="saicoms_pos_package_redeem_form_view">
            <field name="name">pos.package.redeem.form</field>
            <field name="model">pos.package.redeem</field>
            <field name="arch" type="xml">
                <form string="Pos Package" version="7.0">
                    <sheet>
                        <field name="partner_id"/>
                        <field name="product_id"/>
                        <field name="unit_price"/>
                        <field name="reference"/>
                        <field name="date"/>
                        <field name="qty"/>
                        <field name="perform_user_ids" widget="many2many_tags"/>
                    </sheet>
                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="saicoms_pos_package_redeem_search_view">
            <field name="name">pos.package.redeem.search</field>
            <field name="model">pos.package.redeem</field>
            <field name="arch" type="xml">
                <search string="Service Redemption Search">
                    <field name="due_date_from" filter_domain="[('date','&gt;=',self)]"/>
                    <field name="due_date_to" filter_domain="[('date','&lt;=',self)]"/>
                    <filter string="Today" domain="[('date', '>=', time.strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                    <field name="partner_id"/>
                    <field name="perform_user_ids"/>
                    <filter string="This week" domain="[('date', '&gt;=', ((context_today()+relativedelta(weeks=-1,days=1, weekday=0)).strftime('%%Y-%%m-%%d'))),('date', '&lt;=', ((context_today()+relativedelta(weeks=0,weekday=6)).strftime('%%Y-%%m-%%d')))]"/>
                    <filter string="Last week" domain="[('date', '&gt;=', ((context_today()+relativedelta(weeks=-2,days=1, weekday=0)).strftime('%%Y-%%m-%%d'))),('date', '&lt;=', ((context_today()+relativedelta(weeks=-1,weekday=6)).strftime('%%Y-%%m-%%d')))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Order Month" icon="terp-go-month" domain="[]"
                                context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="saicoms_pos_package_action" model="ir.actions.act_window">
            <field name="name">Spa Service Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.package</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem action="saicoms_pos_package_action" id="menu_saicoms_pos_package"
                  parent="saicoms_pos_service_package_root_menu"
                  groups="point_of_sale.group_pos_manager,point_of_sale.group_pos_user"/>

    </data>
</openerp>
