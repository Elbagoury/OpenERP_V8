        <record id="view_saicoms_pos_session_tree" model="ir.ui.view">
            <field name="name">saicoms.pos.session.tree</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_tree"/>
            <field name="arch" type="xml">
                <field name="stop_at" position="after">
                    <field name="cash_register_balance_start" string="Open Balance"/>
                    <field name="cash_register_balance_end" string="Closing Balance"/>
                    <field name="saicoms_total_transaction" string="Total Transaction"/>
                </field>
            </field>
        </record>


        <record id="view_saicoms_pos_session_form" model="ir.ui.view">
            <field name="name">saicoms.pos.session.form</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <field name="state" position="before">
                    <button name="saicoms_wkf_action_closing_control" type="object" string="Re-Check Statement" states="closing_control"/>
                </field>
            </field>
        </record>


        <record model="ir.ui.view" id="point_of_sale.view_pos_session_search">
            <field name="name">pos.session.search.view</field>
            <field name="model">pos.session</field>
            <field name="arch" type="xml">
                <search string="Point of Sale Session">
                    <field name="name"/>
                    <filter string="Open" domain="[('state', '=', 'opened')]"/>
                    <separator/>
                    <field name="due_date_from" filter_domain="[('start_at','&gt;=',self)]"/>
                    <field name="due_date_to" filter_domain="[('start_at','&lt;=',self)]"/>
                    <filter string="Today" domain="[('start_at', '>=', time.strftime('%%Y-%%m-%%d 00:00:00'))]"/>
                    <field name="config_id"/>
                    <field name="user_id"/>
                    <filter string="This week" domain="[('start_at', '&gt;=', ((context_today()+relativedelta(weeks=-1,days=1, weekday=0)).strftime('%%Y-%%m-%%d'))),('start_at', '&lt;=', ((context_today()+relativedelta(weeks=0,weekday=6)).strftime('%%Y-%%m-%%d')))]"/>
                    <filter string="Last week" domain="[('start_at', '&gt;=', ((context_today()+relativedelta(weeks=-2,days=1, weekday=0)).strftime('%%Y-%%m-%%d'))),('start_at', '&lt;=', ((context_today()+relativedelta(weeks=-1,weekday=6)).strftime('%%Y-%%m-%%d')))]"/>
                    <group expand="0" string="Group By">
                        <filter string="User" icon="terp-personal" domain="[]" context="{'group_by' : 'user_id'}"/>
                        <filter string="Point of Sales" domain="[]" context="{'group_by': 'user_id'}"/>
                        <filter string="Order Month" icon="terp-go-month" domain="[]"
                                context="{'group_by':'start_at'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="point_of_sale.view_pos_order_filter" model="ir.ui.view">
            <field name="name">pos.order.list.select</field>
            <field name="model">pos.order</field>
            <field name="arch" type="xml">
                <search string="Search Sales Order">
                    <field name="name" string="Sales Order"/>
                    <field name="date_order"/>
                    <field name="pos_reference"/>
                    <field name="partner_id"/>
                    <filter icon="terp-document-new" string="New" domain="[('state','=','draft')]"/>
                    <filter icon="gtk-apply" string="Done" domain="[('state','in',('paid','invoiced','done'))]"/>
                    <filter icon="terp-check" string="Invoiced" domain="[('state','=','invoiced')]"/>
                    <filter icon="gtk-convert" string="Posted" domain="[('state','=','done')]"/>
                    <filter icon="terp-check" string="Has Comment" domain="[('customer_comment','!=','')]"/>
                    <field name="user_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" icon="terp-personal" domain="[]" context="{'group_by':'partner_id'}"/>
                        <filter string="Salesperson" icon="terp-personal" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter string="Advisory" icon="terp-personal" domain="[]" context="{'group_by':'advisory_id'}"/>
                        <filter string="Performing User" icon="terp-personal" domain="[]" context="{'group_by':'perform_user_id'}"/>
                        <filter string="Customer Rating" icon="terp-personal" domain="[]" context="{'group_by':'customer_rating'}"/>
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'state'}"/>
                        <filter string="Order Month" icon="terp-go-month" domain="[]" context="{'group_by':'date_order'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_saicoms_pos_order_form" model="ir.ui.view">
            <field name="name">saicoms.pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page[@string='Products']/field[@name='lines']/tree"
                        position="attributes">
                    <attribute name="colors">blue:is_child_line == True</attribute>
                </xpath>
                <xpath
                        expr="//notebook/page[@string='Products']/field[@name='lines']/tree/field[@name='price_subtotal_incl']"
                        position="after">
                    <field name="is_child_line" invisible="1"/>
                </xpath>
            </field>
        </record>



    </data>
</openerp>