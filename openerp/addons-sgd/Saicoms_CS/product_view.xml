<openerp>
    <data>

        <record id="saicoms_product_template_view" model="ir.ui.view">
            <field name="name">saicoms.product.template.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Remarks">
                        <separator string="Product Remarks"/>
                        <field name="product_remark_ids"/>
                    </page>
                </notebook>
            </field>
        </record>

        <record id="saicoms_product_view" model="ir.ui.view">
            <field name="name">saicoms.product.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="priority">36</field>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Remarks">
                        <separator string="Product Remarks"/>
                        <field name="product_remark_ids"/>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</openerp>
