<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record model="ir.ui.view" id="view_picking_form_inherit">
            <field name="name">stock.picking.form.inherit</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='backorder_id']" position="after">
                    <field name="package" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="package_amount" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="qty" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="flower" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="misc_pd" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                    <field name="remark_deco" attrs="{'invisible': [('picking_type_code', '!=', 'outgoing')]}"/>
                </xpath>
            </field>
        </record>


    </data>
</openerp>