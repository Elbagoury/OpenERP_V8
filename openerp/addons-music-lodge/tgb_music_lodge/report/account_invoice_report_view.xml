<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="action_rental_sales_report" model="ir.actions.act_window">
        <field name="name">Rental Sales Report</field>
        <field name="res_model">account.invoice.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('type','=','out_invoice'),('tgb_type','=','rental')]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="account.view_account_invoice_report_search"/>

    </record>

    <menuitem action="action_rental_sales_report"
    	id="menu_action_rental_sales_report" parent="base.next_id_64" sequence="1"/>
    	
    <record id="action_piano_sales_report" model="ir.actions.act_window">
        <field name="name">Piano Sales Report</field>
        <field name="res_model">account.invoice.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('type','=','out_invoice'),('tgb_type','=','piano_sale')]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="account.view_account_invoice_report_search"/>

    </record>

    <menuitem action="action_piano_sales_report"
    	id="menu_action_piano_sales_report" parent="base.next_id_64" sequence="2"/>
    	
    <record id="action_other_sales_report" model="ir.actions.act_window">
        <field name="name">Other Sales Report</field>
        <field name="res_model">account.invoice.report</field>
        <field name="view_type">form</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('type','=','out_invoice'),'|',('tgb_type','!=','rental'),('tgb_type','=',False)]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="account.view_account_invoice_report_search"/>

    </record>

    <menuitem action="action_other_sales_report"
    	id="menu_action_other_sales_report" parent="base.next_id_64" sequence="3"/>

</data>
</openerp>
