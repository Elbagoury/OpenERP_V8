<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    	
    	<record id="invoice_form_inherit" model="ir.ui.view">
            <field name="name">account.invoice.form.inherit</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
            	<xpath expr="//field[@name='invoice_line']/tree/field[@name='name']" position="after">
            		<field name="brand" invisible="1"/>
            		<field name="model"/>
            		<field name="serial_no"/>
            		<field name="year_of_manufacture" invisible="1"/>
            		<field name="color" invisible="1"/>
            		<field name="dimension" invisible="1"/>
            	</xpath>
            	<xpath expr="//button[@name='invoice_print']" position="replace">
            	</xpath>
            	<xpath expr="//field[@name='fiscal_position']" position="after">
            		<field name="stool"/>
            		<field name="heater"/>
            		<field name="delivery"/>
            	</xpath>
            	<xpath expr="//field[@name='date_invoice']" position="after">
            		<field name="year_guarantee"/>
            		<field name="free_tuning"/>
            	</xpath>
            	<xpath expr="//label[@for='comment']" position="replace">
            		<label string="Remarks"/>
            	</xpath>
            	<xpath expr="//field[@name='comment']" position="attributes">
            		<attribute name="placeholder">Remarks...</attribute>
            	</xpath>
            </field>
        </record>
    	
    </data>
</openerp>