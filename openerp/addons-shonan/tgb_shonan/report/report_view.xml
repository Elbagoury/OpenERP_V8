<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
	
<!-- Quotation -->
	    <record id="quotation_report" model="ir.actions.report.xml">
	        <field name="name">quotation_report</field>
	        <field name="type">ir.actions.report.xml</field>
	        <field name="model">sale.order</field>
	        <field name="report_name">quotation_report</field>
	        <field name="report_type">aeroo</field>
	        <field name="in_format">oo-ods</field>
	        <field name="out_format" model="report.mimetypes" search="[('code','=','oo-xls'),('compatible_types','=','oo-ods')]"/>
	        <field name="parser_loc">tgb_shonan/report/quotation_report.py</field>
	        <field name="report_rml">tgb_shonan/report/quotation_report.ods</field>
	        <field name="parser_state">loc</field>
	        <field name="tml_source">file</field>
	        <field name="attachment_use" eval="0"/>
    	</record>		    
		<report 
			auto="False" 
			menu="True"
			id="quotation_report"
			model="sale.order"
			name="quotation_report"
	        string="Quotation"
	        rml="tgb_shonan/report/quotation_report.ods"/>

