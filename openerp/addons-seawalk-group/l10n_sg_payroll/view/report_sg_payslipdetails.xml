<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_sg_payslipdetails">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="report.external_layout">
                <div class="page">
                	<div class="mt16">
                        <h2>Pay Slip</h2>
                    </div>
                    <p t-field="o.name"/>

                    <table class="table table-condensed table-bordered">
                        <tr>
                            <td><strong>Name</strong></td>
                            <td><span t-field="o.employee_id"/></td>
                            <td><strong>Designation</strong></td>
                            <td><span t-field="o.employee_id.job_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Address</strong></td>
                            <td colspan="3">
                                <div t-field="o.employee_id.address_home_id"
                                    t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Email</strong></td>
                            <td><span t-field="o.employee_id.work_email"/></td>
                            <td><strong>Identification No</strong></td>
                            <td><span t-field="o.employee_id.job_id"/></td>
                        </tr>
                        <tr>
                            <td><strong>Reference</strong></td>
                            <td><span t-field="o.number"/></td>
                            <td><strong>Bank Account</strong></td>
                            <td><span t-field="o.employee_id.otherid"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date From</strong></td>
                            <td><span t-field="o.date_from"/></td>
                            <td><strong>Date To</strong></td>
                            <td><span t-field="o.date_to"/></td>
                        </tr>
                    </table>

                    <h3>Details by Salary Rule Category</h3>
                    <table class="table table-condensed mb32">
                        <thead>
                            <tr>
                                <th>Salary Rule</th>
                                <th class="text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>

                            <t t-foreach="o.sale_layout_lines(order_id = o.id)" t-as="p">
		                        <!-- Name of the category -->
		                        <t t-if="p['category']">
							        <tr>
							            <td colspan="100" class="active" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
							                <t t-if="p['category'].name">
							                    <t t-esc="p['category'].name"></t>
							                </t>
							                <t t-if="not p['category'].name">
							                    Uncategorized
							                </t>
							            </td>
							        </tr>
							    </t>

		                        <!-- Lines associated -->
		                        <t t-foreach="p['lines']" t-as="l">
			                        <tr>
			                            <td>
			                               <span  t-field="l.name"/>
			                            </td>
			                            <td class="text-right">
			                                <span t-field="l.total"
			                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
			                            </td>
			                        </tr>
		                        </t>
		                    </t>
                        </tbody>
                    </table>

                    <div class="row">
		                <div class="col-xs-4 pull-right">
		                    <table class="table table-condensed">
		                        <tr class="border-black">
		                            <td>Employee CPF</td>
		                            <td class="text-right">
		                                <span t-field="o.employee_cpf"
		                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
		                            </td>
		                        </tr>
		                        <tr>
		                            <td>Employer CPF</td>
		                            <td class="text-right">
		                                <span t-field="o.employer_cpf"
		                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/>
		                            </td>
		                        </tr>
		                        <tr class="border-black">
		                            <td><strong>Total CPF</strong></td>
		                            <td class="text-right">
		                                <strong><span t-field="o.total_cpf"
		                                    t-field-options='{"widget": "monetary", "display_currency": "o.company_id.currency_id"}'/></strong>
		                            </td>
		                        </tr>
		                    </table>
		                </div>
		            </div>

		            <div class="mt8">
		                <strong>Notes:</strong><br/>
		                <span t-field="o.note"/>
		            </div>
                    <p class="text-right mt64"><strong>Authorized signature</strong></p>
                </div>
            </t>
        </t>
    </t>
</template>
</data>
</openerp>