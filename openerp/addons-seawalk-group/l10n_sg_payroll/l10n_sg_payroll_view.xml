		<record id="income_tax_detail_form" model="ir.ui.view">
			<field name="name">income.tax.detail.form</field>
			<field name="model">income.tax.detail</field>
			<field name="arch" type="xml">
				<form string="Income Tax">
					<group cols="6" colspan="4">
						<field name="assesment_year_id"/>
					</group>
					<notebook>
						<page string="IR8A">
							<separator string="Section A-C"/>
							<group>
								<group>
									<field name="directories_fee" attrs="{'required': [('date_of_approval_director', '!=', False)]}"/>
								</group>
								<group>
									<field name="date_of_approval_director" attrs="{'required': [('directories_fee', '&gt;', 0)]}"/>
								</group>
							</group>
							<group>
								<group>
									<field name="gain_profit"/>
									<field name="exempt_income" attrs="{'required': [('exempt_remission', '!=', 'N'), ('exempt_remission', '!=', False)]}"/>
								</group>
								<group>
									<field name="exempt_remission" attrs="{'required': [('exempt_income', '&gt;', 0)]}"/>
									<field name="from_ir8s"/>
								</group>
							</group>
							<!-- <separator string="Section D4"/> -->
							<group>
								<group string="Section D4">
									<field name="pension"/>
									<field name="insurance"/>
									<field name="gratuity_payment" attrs="{'required': [('gratuity_payment_amount', '&gt;', 0)]}"/>
									<field name="wheather_compensation_loss_office" attrs="{'required': ['|', ('approve_obtain_from_ir8s', '=', 'Y'), ('compensation_loss_office', '&gt;', 0)]}"/>
									<field name="approve_obtain_from_ir8s" attrs="{'required': ['|', ('wheather_compensation_loss_office', '=', 'Y'), ('date_of_approval', '!=', False)]}"/>
									<field name="date_of_approval" attrs="{'required': [('approve_obtain_from_ir8s', '=', 'Y')]}"/>
									<field name="compensation_loss_office" attrs="{'required': [('wheather_compensation_loss_office', '=', 'Y')]}"/>
									<field name="gratuity_payment_amount" attrs="{'required': [('gratuity_payment', '=', 'Y')]}"/>
								</group>
								<group string="Section D5">
									<field name="retirement_benefit_fund"/>
									<field name="retirement_benefit_upto"/>
									<field name="retirement_benefit_accured_from"/>
								</group>
							</group>
							<separator string="Section D6-D9"/>
							<group>
								<group>
									<field name="benefits_in_kind" attrs="{'required': [('value_benefits_in_kind', '&gt;', 0)]}"/>
									<field name="section_applicable"/>
									<field name="contribution_by_employer_pension_pf"/>
									<field name="excess_volunatry_contribution_cpf_employer"/>
									<field name="gain_profit_share_option"/>
									<field name="value_benefits_in_kind" attrs="{'required': [('benefits_in_kind', '=', 'Y')]}"/>
									<field name="employee_voluntary_contribution_cpf"/>
								</group>
							</group>
							<separator string="Section E"/>
							<group>
								<field name="employement_income_for_tax_borne_by_employer" attrs="{'required': [('employee_income_tax', '=', 'P')]}"/>
								<field name="fixed_income_tax_liability_borne_by_employer" attrs="{'required': [('employee_income_tax', '=', 'H')]}"/>
								<field name="employee_income_tax" attrs="{'required': ['|', ('employement_income_for_tax_borne_by_employer', '&gt;', 0), ('fixed_income_tax_liability_borne_by_employer', '&gt;', 0)]}"/>
							</group>
							<separator string="Section F"/>
							<group>
								<group>
									<field name="cessation_provision_applicable"/>
									<field name="date_of_declaration_of_bonus"/>
								</group>
								<group>
									<field name="date_of_commencement"/>
									<field name="date_of_cessation_posted_overseas"/>
								</group>
							</group>
						</page>
					</notebook>
				</form>
			</field>
		</record>

