						<field name="street" attrs="{'required': [('address_type', '=', 'L')]}"/>
						<field name="level_no" attrs="{'required': [('unit_no', '!=', False)]}"/>
						<field name="unit_no" attrs="{'required': [('level_no', '!=', False)]}"/>
						<field name="postal_code" attrs="{'required': [('address_type', '=', 'L')]}"/>
					</group>
					<group string="Unformatted Address" name="unformatted_address" attrs="{'invisible': [('address_type', '=', 'L')]}">
						<field name="line1" attrs="{'required': [('address_type', 'in', ['F', 'C'])]}"/>
						<field name="line2" attrs="{'readonly': [('line1', '=', False)]}"/>
						<field name="line3" attrs="{'readonly': [('line2', '=', False)]}"/>
						<field name="postal_code_unformatted" attrs="{'required': [('address_type', '=', 'C')]}"/>
					</group>
					<group cols="6" colspan="4">
						<field name="country_id" attrs="{'required': [('address_type', '=', 'F')]}"/>
					</group>
				</form>
           	</field>
       	</record>

