		<record id="singapore_hr_address_form" model="ir.ui.view">
            <field name="name">hr.address.form</field>
            <field name="model">hr.address</field>
            <field name="arch" type="xml">
				<form string="Address Details">
					<group>
						<group>
							<field name="name"/>
						</group>
						<group>
							<field name="address_type"/>
