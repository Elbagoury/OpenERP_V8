        <!-- payslip -->
        <record id="l10n_sg_payslip_inherited" model="ir.ui.view">
            <field name="name">l10n.sg.hr.payslip</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//button[@string='Cancel Payslip']" position="before">
                    <button name="done_sheet" states="verify" string="Approve" class="oe_highlight" groups="base.group_hr_user"/>
                </xpath>

                <xpath expr="//button[@name='hr_verify_sheet']" position="attributes">
                    <attribute name="groups">base.group_hr_user</attribute>
                </xpath>
                <xpath expr="//button[@name='refund_sheet']" position="attributes">
                    <attribute name="groups">base.group_hr_user</attribute>
                </xpath>
                <xpath expr="//button[@name='draft']" position="attributes">
                    <attribute name="groups">base.group_hr_user</attribute>
                </xpath>
                <xpath expr="//button[@name='compute_sheet']" position="attributes">
                    <attribute name="groups">base.group_hr_user</attribute>
                </xpath>
                <xpath expr="//button[@name='cancel_sheet']" position="attributes">
                    <attribute name="groups">base.group_hr_user</attribute>
                </xpath>

                <xpath expr="//field[@name='line_ids']" position="attributes">
                    <attribute name="readonly">True</attribute>
                </xpath>

                <xpath expr="//field[@name='line_ids']" position="after">
                    <group>
	                    <field name="employee_cpf" readonly="1"/>
