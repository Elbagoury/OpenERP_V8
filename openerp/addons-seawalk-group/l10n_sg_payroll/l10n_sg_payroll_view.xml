			    	<page string="Contact Information">
	                	<group>
	                		<group>
	                			<field name="local_address_id"
			                        context="{'show_address': 1, 'default_customer': False}"
			                        options='{"always_reload": True, "highlight_first_line": True}'/>
			                    <field name="co_address_id"
			                        context="{'show_address': 1, 'default_customer': False}"
			                        options='{"always_reload": True, "highlight_first_line": True}'/>
	                		</group>
	                		<group>
	                			<field name="foreign_address_id"
			                        context="{'show_address': 1, 'default_customer': False}"
			                        options='{"always_reload": True, "highlight_first_line": True}'/>
			                    <field name="emergency_address_id"
			                        context="{'show_address': 1, 'default_customer': False}"
			                        options='{"always_reload": True, "highlight_first_line": True}'/>
	                		</group>
	                	</group>
	                </page>
                </xpath-->
