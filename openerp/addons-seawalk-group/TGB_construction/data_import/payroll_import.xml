<openerp>
    <data>

        <record id="dksquare_payroll_import_view" model="ir.ui.view">
            <field name="name">Construction Payroll Import</field>
            <field name="model">payroll.import</field>
            <field name="arch" type="xml">
                <form string="Import Payroll" version="7.0">
                    <header>
                        <button name="submit_request" states="draft" string="Confirm" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="cancel_request" string="Cancel Import"
                                groups="base.group_user" type="object"/>
                        <button name="approve_request"  states="submitted" string="Approve" class="oe_highlight"
                                groups="base.group_user" type="object"/>
                        <button name="reject_request"  states="submitted" string="Reject"
                                groups="base.group_user" type="object"/>
                        <button name="send_to_costing"  states="approved" string="Send to Project Costing" class="oe_highlight"
                                groups="base.group_user" type="object"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected,cancelled,done"
                               statusbar_colors='{"rejected":"red","approved":"blue"}'/>

                    </header>
                    <sheet>
                        <group>
                            <field name="date_import"/>
                            <field name="file"/>
                            <button name="import_payroll" type="object" string="Import Payroll" />
                            <newline/>
                            <field name="subject"/>
                            <field name="imported_by"/>
                        </group>
                        <notebook>

                            <page string="Payroll Details">
                                <field name="costing_detail_ids">
                                    <tree editable="1">
                                        <field name="employee_id"></field>
                                        <field name="worked_day"/>
                                        <field name="daily_rate"/>
                                        <field name="total_working_hours"/>
                                        <field name="ot_hours"/>
                                        <field name="ot_rate"/>
                                        <field name="total_cost"/>
                                        <field name="project_costing_id"/>
                                    </tree>
                                </field>
                                <group>
                                    <field name="total_cost"/>
                                </group>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="construction_payroll_import_tree_view">
            <field name="name">Payroll importer Tree</field>
            <field name="model">payroll.import</field>
            <field name="arch" type="xml">
                <tree string="Importer Recorder" version="7.0">
                    <field name="date_import"/>
                    <field name="subject"/>
                    <field name="imported_by"/>
                    <field name="total_cost"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record model="ir.actions.act_window" id="payroll_importer_action">
            <field name="name">Payroll Importer</field>
            <field name="view_id" ref="dksquare_payroll_import_view"/>
            <field name="res_model">payroll.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="target">inline</field>
        </record>

        <menuitem id="ftb_payroll_importer_menu" action="payroll_importer_action" name="Payroll Importer"
                  parent="menu_construction_human_resource_menu" sequence="10"/>


        <record model="ir.actions.act_window" id="ftb_payroll_importer_record_action">
            <field name="name">Payroll Import History</field>
            <field name="view_id" ref="construction_payroll_import_tree_view"/>
            <field name="res_model">payroll.import</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="ftb_payroll_importer_record_menu" action="ftb_payroll_importer_record_action" name="Payroll Import History"
                  parent="menu_construction_human_resource_menu" sequence="11"/>



    </data>
</openerp>
