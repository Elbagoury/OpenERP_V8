<?xml version="1.0"?>
<openerp>
    <data>

        <record id="seq_type_help_desk" model="ir.sequence.type">
            <field name="name">Complain Log</field>
            <field name="code">crm.helpdesk</field>
        </record>
        <record id="seq__help_desk" model="ir.sequence">
            <field name="name">Complain Log</field>
            <field name="code">crm.helpdesk</field>
            <field name="prefix">Log</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>


        <record model="ir.ui.view" id="crm_case_form_view_helpdesk_inherit">
            <field name="name">CRM - Helpdesk Support Form</field>
            <field name="model">crm.helpdesk</field>
            <field name="inherit_id" ref="crm_helpdesk.crm_case_form_view_helpdesk"></field>
            <field name="arch" type="xml">
                <field name ="user_id" position="before">
                    <field name ="log_number"/>
                </field>
                <field name ="date" position="after">
                    <field name ="complain_type"/>
                </field>
            </field>
        </record>

        <record model="ir.ui.view" id="crm_case_tree_view_helpdesk_inherit">
            <field name="name">CRM - Helpdesk Support Tree</field>
            <field name="model">crm.helpdesk</field>
            <field name="inherit_id" ref="crm_helpdesk.crm_case_tree_view_helpdesk"></field>
            <field name="arch" type="xml">
                <field name ="name" position="before">
                    <field name ="log_number"/>
                </field>
            </field>
        </record>


    </data>
</openerp>
